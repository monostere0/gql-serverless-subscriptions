{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./.webpack",
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true
  }
}